---
import type { HTMLAttributes } from "astro/types";
import katex from "katex";

export interface Props extends HTMLAttributes<"span"> {
    formula: string;
    display?: boolean;
}

const { formula, display = false } = Astro.props;
const html = katex.renderToString(formula, {
    throwOnError: false,
    displayMode: display,
    output: "htmlAndMathml",
});
---

<span set:html={html} class="" />

<style>
    span {
        font-size: 0.8em;
        font-weight: 300;
        margin-bottom: 1.2em;
    }
</style>
